<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="@dimen/size_Margin_Space_Dialog">

        <ImageView
            android:id="@+id/img_Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_delete" />

        <TextView
            android:id="@+id/tv_Titile"
            style="@style/CusTextViewTitileTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_Exit"
            android:gravity="center"
            android:text="@string/title_Dialog_Emergency" />

        <TextView
            android:id="@+id/tv_Content"
            style="@style/CusTextViewContentTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Titile"
            android:layout_margin="@dimen/size_Margin_Space"
            android:gravity="center"
            android:text="@string/content_Dialog_Emergency" />

        <TextView
            android:id="@+id/tv_Content_Time"
            style="@style/CusTextViewContentTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Content"
            android:layout_margin="@dimen/size_Margin_Space"
            android:gravity="center"
            android:text="@string/content_Dialog_Emergency_Time" />
        <LinearLayout
            android:gravity="center"
            android:layout_below="@+id/tv_Content_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_Margin_Space"
                android:text="@string/btn_Dialog_Emergency_Login" />

            <Button
                android:id="@+id/btn_Register"
                android:layout_toRightOf="@+id/btn_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_Margin_Space"
                android:text="@string/btn_Dialog_Emergency_Register" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>