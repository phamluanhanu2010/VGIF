<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lout_Game_content"
        android:layout_width="@dimen/size_Image_Icon"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_margin="10dp">

        <ImageView
            android:background="@drawable/cus_black_border_corner_lout"
            android:id="@+id/img_Game"
            android:layout_width="@dimen/size_Image_Icon"
            android:layout_height="@dimen/size_Image_Icon" />
        <ImageView
            android:visibility="visible"
            android:id="@+id/img_Corner"
            android:src="@drawable/ic_corner"
            android:layout_width="@dimen/size_Image_Icon"
            android:layout_height="@dimen/size_Image_Icon" />
        <ImageView
            android:background="@drawable/cus_while_border_corner_lout"
            android:layout_width="@dimen/size_Image_Icon"
            android:layout_height="@dimen/size_Image_Icon" />

        <TextView
            android:visibility="visible"
            android:id="@+id/tv_Status"
            style="@style/CusTextViewContentTheme"
            android:textSize="10dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hot"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:rotation="45"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:gravity="center"
            style="@style/CusTextViewContentTheme"
            android:layout_below="@+id/img_Game"
            android:id="@+id/tv_Game_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game 1" />
    </RelativeLayout>

</LinearLayout>